<object>
    <name>LangTrans</name>
    <info>
        <sql>
            <primary>idLangTrans</primary>
        </sql>
        <form>
            <title>translations</title>
            <orderBy>code</orderBy>
            <label>#translation</label>
            <labelAdmin>
                <label type="link">#code</label>
                <label style="small">#translation</label>
            </labelAdmin>
        </form>
    </info>
    <attributes>
        <attribute>
            <name>idLangTrans</name>
            <type>id-autoincrement</type>
        </attribute>
        <attribute>
            <label>code</label>
            <name>code</name>
            <type>text-unchangeable</type>
            <required>notEmpty</required>
        </attribute>
        <attribute>
            <label>translation</label>
            <name>translation</name>
            <lang>true</lang>
            <type>text-large</type>
            <required>notEmpty</required>
        </attribute>
    </attributes>
</object>