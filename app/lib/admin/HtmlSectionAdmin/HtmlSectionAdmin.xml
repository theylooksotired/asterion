<?xml version="1.0" encoding="utf-8"?>
<object>
    <name>HtmlSectionAdmin</name>
    <info>
        <sql>
            <primary>idHtmlSectionAdmin</primary>
        </sql>
        <form>
            <title>sections</title>
            <orderBy>code</orderBy>
            <label>#title</label>
            <permissions>
                <superadmin>
                    <canRewrite>true</canRewrite>
                    <canViewList>true</canViewList>
                    <canInsert>true</canInsert>
                    <canModify>true</canModify>
                    <canDelete>true</canDelete>
                    <canView>true</canView>
                </superadmin>
            </permissions>
        </form>
        <nav>
            <labelSections>
                <label type="link">code</label>
                <label style="small">title</label>
            </labelSections>
        </nav>
    </info>
    <attributes>
        <attribute>
            <name>idHtmlSectionAdmin</name>
            <type>id-autoincrement</type>
        </attribute>
        <attribute>
            <name>code</name>
            <label>code</label>
            <required>notEmpty</required>
            <type>text</type>
        </attribute>
        <attribute>
            <name>title</name>
            <lang>true</lang>
            <label>title</label>
            <required>notEmpty</required>
            <type>text</type>
        </attribute>
        <attribute>
            <name>titleUrl</name>
            <lang>true</lang>
            <type>hidden-url</type>
            <refObject>title</refObject>
        </attribute>
        <attribute>
            <name>section</name>
            <label>section</label>
            <lang>true</lang>
            <required>notEmpty</required>
            <type>textarea-ck</type>
        </attribute>
    </attributes>
    <indexes>
        <index>
            <name>code</name>
            <type></type>
            <fields>code</fields>
        </index>
        <index>
            <name>titleUrl</name>
            <type></type>
            <fields>titleUrl</fields>
            <lang>true</lang>
        </index>
    </indexes>
</object>