<?xml version="1.0" encoding="utf-8"?>
<object>
	<name>Post</name>
	<info>
		<sql>
			<primary>idPost</primary>
			<created>true</created>
			<modified>true</modified>
			<order>true</order>
			<engine>MyISAM</engine>
			<onDelete>PostTag,PostPicture</onDelete>
			<onCreate>PostTag,PostCategory,Tag,PostPicture</onCreate>
		</sql>
		<form>
			<title>Post</title>
			<label>#title</label>
			<layout>simple</layout>
			<pager></pager>
			<group></group>
			<orderBy>ord</orderBy>
			<search>title</search>
			<permissions>
				<superadmin>
					<canRewrite>true</canRewrite>
					<canViewList>true</canViewList>
					<canInsert>true</canInsert>
					<canModify>true</canModify>
					<canDelete>true</canDelete>
					<canOrder>true</canOrder>
					<canView>true</canView>
				</superadmin>
			</permissions>
			<multipleActions>
				<action>delete</action>
				<action>activate</action>
				<action>deactivate</action>
			</multipleActions>
			<labelAdmin>
				<label style="active" type="active">#active</label>
				<label style="image" type="imageLink">image</label>
				<label style="regular">
					<label type="link">_#title</label>
					<label style="small">_?code_: _#titleUrl</label>
					<label style="small">#shortDescription</label>
				</label>
			</labelAdmin>
		</form>
		<nav>
			<base>posts</base>
			<idnav>idPost_titleUrl</idnav>
		</nav>
	</info>
	<attributes>
		<attribute>
			<name>idPost</name>
			<type>id-autoincrement</type>
		</attribute>
		<attribute>
			<name>image</name>
			<label>image</label>
			<type>file</type>
			<mode>image</mode>
		</attribute>
		<attribute>
			<name>title</name>
			<label>title</label>
			<type>text-long</type>
			<required>notEmpty</required>
		</attribute>
		<attribute>
			<name>titleUrl</name>
			<type>hidden-url</type>
			<refAttribute>title</refAttribute>
		</attribute>
		<attribute>
			<name>hiddenLogin</name>
			<type>hidden-login</type>
		</attribute>
		<attribute>
			<name>shortDescription</name>
			<label>shortDescription</label>
			<type>textarea-long</type>
			<required>notEmpty</required>
		</attribute>
		<attribute>
			<name>description</name>
			<label>description</label>
			<type>textarea-ck</type>
			<required>notEmpty</required>
		</attribute>
		<attribute>
			<name>idPostCategory</name>
			<type>select-checkbox</type>
			<refObject>PostCategory</refObject>
		</attribute>
		<attribute>
			<name>publishDate</name>
			<label>publishDate</label>
			<type>date-text</type>
		</attribute>
		<attribute>
			<name>active</name>
			<label>active</label>
			<type>checkbox</type>
		</attribute>
		<attribute>
			<name>tags</name>
			<label>tags</label>
			<type>multiple-autocomplete</type>
			<refObject>Tag</refObject>
			<lnkObject>PostTag</lnkObject>
			<refAttribute>name</refAttribute>
		</attribute>
		<attribute>
			<name>pictures</name>
			<label>pictures</label>
			<type>multiple-object</type>
			<refObject>PostPicture</refObject>
			<lnkAttribute>idPost</lnkAttribute>
		</attribute>
	</attributes>
	<indexes>
		<index>
			<name>titleUrl</name>
			<type></type>
			<fields>titleUrl</fields>
		</index>
	</indexes>
</object>